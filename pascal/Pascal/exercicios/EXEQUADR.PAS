PROGRAM QUADRADO;
USES CRT;
VAR X: INTEGER;
    R: STRING[1];
BEGIN
REPEAT
     WRITE('DIGITE Nß: ');
     READLN(X);
     IF X MOD 2 =0 THEN
        WRITELN('O Nß ê PAR E SEU QUADRADO ê: ',SQR(X))
     ELSE
         WRITELN('O Nß ê IMPAR E SEU QUADRADO ê ',SQR(X));
     WRITE('DESEJA CONTINUAR?: ');
     READLN(R);
UNTIL R <> 'S'
END.
